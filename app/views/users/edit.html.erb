<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-3">
      <h2>User info</h2>
      
      <% if @user.errors.any? %>
        <h3 class="mt-3"><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
        <%= form_with model: @user do |f| %>
          <div class="field">
            <%= f.label :name %><br>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
          </div>

          <div class="field">
            <%= f.label :Introdution %><br>
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
          <%= f.submit "Update User", class: "btn btn-secondary mt-3" %>
        <% end %>
    </div>
  </div>
</div>

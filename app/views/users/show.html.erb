<div class="container">
   <div class="row">
    <div class="col-3">
      <!--render-->
      <%= render 'users/info', user: @user %>
      <!--render-->
      <h2>New Book</h2>
      <%= render 'books/form', book_new: @book_new %>
    </div>

    <div class="col-1"></div>

    <div class="col-8">
      <h2>Books</h2>

     <table>
       <tr>
         <tbody>
           <% @books.each do |book| %>
             <%= book.title %>
             <% book.body %>
           <% end %>
         </tbody>
       </tr>
     </table>
    </div>
  </div>
</div>

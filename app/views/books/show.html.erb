<div class="container mt-3">
  <div class="row">
    <div class="col-3">
      <!--render-->
      <%= render 'users/info', user: @user %>
      <!--render-->
      <h2>New Book</h2>
      <%= render 'form', book: @books %>
    </div>

    <div class="col-1"></div>

    <div class="col-8">
      <h2>Book detail</h2>

      <table class="table">
        <tbody>
          <tr>
            <td>
              <!--リンクして各Userへ遷移する-->
              <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image(50, 50) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success btn-sm" %></td>
              <td><%= link_to 'Destroy', book_path(@book), method: :delete, class: "btn btn-danger btn-sm", "data-confirm" => "本当に削除しますか？" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

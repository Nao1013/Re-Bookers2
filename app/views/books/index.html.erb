<div class="container">
  <div class="row">
    <div class="col-3 mt-3">
      <%= render 'users/info', user: @user %>

      <!--render-->
      <h2>New Book</h2>
      <%= render 'form', book: @book_new %>
    </div>

    <div class="col-1"></div>

    <div class="col-8 mt-3">
      <h3>Books</h3>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <% user = book.user %>
               <%= link_to user_path(user) do %>
                 <%= image_tag user.get_profile_image(50, 50) %>
               <% end %>
            </td>
            <td>
              <%= link_to book_path(book) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
